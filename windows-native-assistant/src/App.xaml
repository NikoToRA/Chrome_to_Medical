<Application x:Class="WindowsNativeAssistant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             Startup="OnStartup"
             Exit="OnExit">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Define tray icon resource -->
            <tb:TaskbarIcon x:Key="TrayIcon"
                           IconSource="/app.ico"
                           ToolTipText="Windows Native Assistant"
                           DoubleClickCommand="{Binding ShowPanelCommand}"
                           MenuActivation="RightClick">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Open Panel" Click="ShowPanel_Click" />
                        <MenuItem Header="Settings" Click="ShowSettings_Click" />
                        <Separator />
                        <MenuItem Header="Exit" Click="Exit_Click" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application>
