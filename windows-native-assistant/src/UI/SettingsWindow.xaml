<Window x:Class="WindowsNativeAssistant.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="設定"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Hotkey Settings -->
                <GroupBox Header="ホットキー設定" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="現在のホットキー:" Margin="0,0,0,5"/>
                        <TextBlock x:Name="CurrentHotkeyTextBlock"
                                   Text="Ctrl+Alt+A"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="（変更機能は将来実装予定）"
                                   FontSize="11"
                                   Foreground="#666"/>
                    </StackPanel>
                </GroupBox>

                <!-- API Settings -->
                <GroupBox Header="API設定" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="エンドポイント:" Margin="0,0,0,5"/>
                        <TextBox x:Name="ApiEndpointTextBox"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="認証トークン:" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ApiTokenPasswordBox"
                                     Margin="0,0,0,10"/>

                        <TextBlock Text="タイムアウト（秒）:" Margin="0,0,0,5"/>
                        <TextBox x:Name="TimeoutTextBox"
                                 Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Logging Settings -->
                <GroupBox Header="ログ設定">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="LoggingEnabledCheckBox"
                                  Content="ログを有効化"
                                  Margin="0,0,0,10"/>

                        <CheckBox x:Name="IncludeContentCheckBox"
                                  Content="生成内容をログに含める（非推奨）"
                                  Margin="0,0,0,5"/>

                        <TextBlock Text="※患者情報が含まれる可能性があるため、通常はOFFを推奨"
                                   FontSize="10"
                                   Foreground="#D32F2F"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="保存"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button Content="キャンセル"
                    Width="80"
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
