{
    "name": "karte-ai-plus-backend",
    "version": "1.0.0",
    "description": "Azure Functions for Karte AI+",
    "main": "index.js",
    "type": "commonjs",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "start": "func start",
        "build": "echo 'No build required'",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@azure/communication-email": "^1.0.0",
        "@azure/data-tables": "^13.0.0",
        "@azure/storage-blob": "^12.11.0",
        "date-fns": "^2.30.0",
        "jsonwebtoken": "^9.0.2",
        "openai": "^4.77.0",
        "pdfkit": "^0.13.0",
        "proxyquire": "^2.1.3",
        "stripe": "^17.5.0"
    },
    "devDependencies": {
        "jest": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": ["**/__tests__/**/*.test.js"],
        "collectCoverageFrom": [
            "lib/**/*.js",
            "utils/**/*.js",
            "!**/node_modules/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 20,
                "functions": 15,
                "lines": 25,
                "statements": 25
            }
        }
    }
}
