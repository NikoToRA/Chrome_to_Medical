{
  "manifest_version": 3,
  "name": "Chrome to X",
  "version": "1.0.5",
  "description": "サイドバーでテキストと画像を編集し、XやFacebook、MicroCMSなどに投稿するためのコンテンツを作成するツール",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "clipboardWrite",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Chrome to X を開く"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/platforms/generic.js",
        "content/platforms/default.js",
        "content/platforms/x.js",
        "content/platforms/facebook.js",
        "content/platforms/google-docs.js",
        "content/platforms/notion.js",
        "content/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options/options.html"
}
